<config>
    <modules>
        <IntegerNet_MagentoLocalizedDE>
            <version>0.1.0</version>
        </IntegerNet_MagentoLocalizedDE>
    </modules>

    <global>
        <resources>
            <magento_localized_de_setup>
                <setup>
                    <module>IntegerNet_MagentoLocalizedDE</module>
                </setup>
            </magento_localized_de_setup>
        </resources>
    </global>

    <default>
        <general>
            <country>
                <allow>DE</allow>
            </country>
            <locale>
                <code>de_DE</code>
                <firstday>1</firstday>
            </locale>
            <store_information>
                <merchant_country>DE</merchant_country>
            </store_information>
            <imprint>
                <country>DE</country>
                <display_copyright>1</display_copyright>
            </imprint>
        </general>

        <design>
            <header>
                <welcome>Herzlich Willkommen!</welcome>
            </header>
        </design>

        <catalog>
            <custom_options>
                <time_format>24h</time_format>
                <date_fields_order>d,m,y</date_fields_order>
            </custom_options>
            <baseprice>
                <base_price_incl_tax>1</base_price_incl_tax>
                <frontend_label>entspricht {{baseprice}} pro {{reference_amount}} {{reference_unit}}</frontend_label>
            </baseprice>
        </catalog>

        <sales>
            <reorder>
                <allow>0</allow>
                <hide_sidebar_box>1</hide_sidebar_box>
            </reorder>
        </sales>

        <autoshipping>
            <settings>
                <enabled>1</enabled>
                <country_id>DE</country_id>
            </settings>
        </autoshipping>

        <carriers>
            <flatrate>
                <title>Versandkosten</title>
                <name>Pauschal</name>
                <type>O</type>
                <price>4.90</price>
            </flatrate>
            <freeshipping>
                <active>1</active>
                <title>Versandkosten</title>
                <name>Versandkostenfrei</name>
                <free_shipping_subtotal>50</free_shipping_subtotal>
            </freeshipping>
        </carriers>

        <payment>
            <ccsave>
                <active>0</active>
            </ccsave>
            <checkmo>
                <active>0</active>
            </checkmo>
            <free>
                <title>Kostenfrei</title>
            </free>
            <banktransfer>
                <active>1</active>
                <title>Vorkasse</title>
                <sort_order>20</sort_order>
            </banktransfer>
            <debit>
                <active>1</active>
                <title>Lastschrift</title>
                <sort_order>30</sort_order>
                <order_status>pending</order_status>
                <allowspecific>1</allowspecific>
                <specificcountry>DE</specificcountry>
            </debit>
            <cashondelivery>
                <active>1</active>
                <title>Nachnahme</title>
                <sort_order>40</sort_order>
                <order_status>pending</order_status>
                <shippingallowspecific>1</shippingallowspecific>
                <shippingspecificcountry>DE</shippingspecificcountry>
                <inlandcosts>2</inlandcosts>
                <customtext>Bei Zahlung per Nachnahme erhebt der Zusteller zusätzlich 2,00 €
                    Übermittlungsentgelt vor Ort.</customtext>
            </cashondelivery>
        </payment>

        <magento_localized>
            <module_title>Magento DE</module_title>
            <module_code>magento_de</module_code>
            <module_url>http://de.nr-apps.com/store/magento-de.html</module_url>
            <logo_filename>magento_localized/logo.png</logo_filename>
            <htmldata_url>http://www.nr-apps.com/n/magento_de_de/wizard.json</htmldata_url> 
            <tracking_url>http://www.nr-apps.com/n/germanstoreconfig/tracking</tracking_url>
            <newsfeed_url>http://www.nr-apps.com/n/media/germanstoreconfig/feed.xml</newsfeed_url>
            <iframe_url_prefix>https://www.nr-apps.com/n/magento_de_</iframe_url_prefix>
            <iframe_url_suffix>.html</iframe_url_suffix>
            <iframe_main_language_code>de</iframe_main_language_code>
            <iframe_fallback_language_code>en</iframe_fallback_language_code>
            <feed_url_prefix>http://www.nr-apps.com/n/media/germanstoreconfig/</feed_url_prefix>
            <default_language>de_DE</default_language>
            <available_languages>
                <en_US />
                <fr_FR />
                <it_IT />
            </available_languages>
            <country>DE</country>
            <currency>EUR</currency>
            <timezone>Europe/Berlin</timezone>
            <install_guide_url>
                <de>http://www.nr-apps.com/n/magento_de_de/guide.html</de>
                <default>http://www.nr-apps.com/n/magento_de_en/guide.html</default>
            </install_guide_url>
            <survey_url>
                <de>http://www.nr-apps.com/n/magento_de_de/survey.html</de>
                <default>http://www.nr-apps.com/n/magento_de_en/survey.html</default>
            </survey_url>
            <form_fields>
                <general__imprint__vat_id>
                    <type>text</type>
                    <label>VAT-ID</label>
                    <sorting>200</sorting>
                    <optional>1</optional>
                </general__imprint__vat_id>
                <general__imprint__tax_number>
                    <type>text</type>
                    <label>Tax number</label>
                    <sorting>210</sorting>
                    <optional>1</optional>
                </general__imprint__tax_number>
                <general__imprint__court>
                    <type>text</type>
                    <label>Register court</label>
                    <sorting>220</sorting>
                    <optional>1</optional>
                </general__imprint__court>
                <general__imprint__register_number>
                    <type>text</type>
                    <label>Register number</label>
                    <sorting>230</sorting>
                    <optional>1</optional>
                </general__imprint__register_number>
                <general__imprint__financial_office>
                    <type>text</type>
                    <label>Financial office</label>
                    <sorting>240</sorting>
                    <optional>1</optional>
                </general__imprint__financial_office>
                <general__imprint__ceo>
                    <type>text</type>
                    <label>CEO</label>
                    <sorting>250</sorting>
                    <optional>1</optional>
                </general__imprint__ceo>
                <general__imprint__owner>
                    <type>text</type>
                    <label>Owner</label>
                    <sorting>260</sorting>
                    <optional>1</optional>
                </general__imprint__owner>
                <general__imprint__bank_account_owner>
                    <type>text</type>
                    <label>Account owner</label>
                    <sorting>300</sorting>
                    <optional>0</optional>
                </general__imprint__bank_account_owner>
                <general__imprint__bank_account>
                    <type>text</type>
                    <label>Account</label>
                    <sorting>310</sorting>
                    <optional>0</optional>
                </general__imprint__bank_account>
                <general__imprint__bank_code_number>
                    <type>text</type>
                    <label>Bank number</label>
                    <sorting>320</sorting>
                    <optional>0</optional>
                </general__imprint__bank_code_number>
                <general__imprint__bank_name>
                    <type>text</type>
                    <label>Bank name</label>
                    <sorting>330</sorting>
                    <optional>0</optional>
                </general__imprint__bank_name>
                <general__imprint__swift>
                    <type>text</type>
                    <label>SWIFT</label>
                    <sorting>340</sorting>
                    <optional>0</optional>
                </general__imprint__swift>
                <general__imprint__iban>
                    <type>text</type>
                    <label>IBAN</label>
                    <sorting>350</sorting>
                    <optional>0</optional>
                </general__imprint__iban>
            </form_fields>
            <modules>
                <firegento_pdf>
                    <description>Ersetzt die Standard-PDFs für Rechnungen, Lieferscheine und Gutschriften durch bessere Versionen</description>
                </firegento_pdf>
                <dermodpro_baseprice>
                    <name>Grundpreis-Modul</name>
                    <description>Automatische Berechnung und Anzeige des Grundpreises für Artikel</description>
                    <url>http://de.nr-apps.com/store/baseprice-extension-basic.html</url>
                </dermodpro_baseprice>
                <aoe_managestores>
                    <name>Store-Verwaltung</name>
                    <description>Ein deutlich intuitiveres Interface zum Verwalten von Websites, Stores und Store Views</description>
                </aoe_managestores>
                <avstudnitz_scopehint>
                    <name>Scope Hint</name>
                    <description>Zeigt an, wenn ein Konfigurationswert auf einem niedrigeren Level (Website oder StoreView) überschrieben ist.</description>
                </avstudnitz_scopehint>
                <avstudnitz_admin_notification_advanced>
                    <name>Erweiterte Admin-Benachrichtigungen</name>
                    <description>Verbessert die Handhabung von Admin-Benachrichtigungen mit Buttons wie "alle gelesen" und "alle löschen".</description>
                </avstudnitz_admin_notification_advanced>
                <timreynolds_magento_qconfig>
                    <name>Schnelle Konfigurations-Suche</name>
                    <description>Fügt eine Schnellsuche-Funktionalität zum Konfigurationsbereich hinzu.</description>
                </timreynolds_magento_qconfig>
                <integernet_removecustomeraccountlinks>
                    <name>Kundenkonto-Links entfernen</name>
                    <description>Entfernt überflüssige Links wie "Meine Downloads" und "Meine Schlagworte" aus der Benutzerkonto-Navigation</description>
                    <url>http://www.integer-net.de/benutzerkonto-magento-deaktivieren-von-menupunkten/</url>
                </integernet_removecustomeraccountlinks>
                <integernet_autoshipping>
                    <name>Autoshipping</name>
                    <description>Zeigt Versandkosten bereits im Warenkorb an, und ermöglicht es, dort das Zielland zu wechseln.</description>
                    <url>http://www.integer-net.de/magento-versandkostenvorschau-im-warenkorb-mit-integernet_autoshipping/</url>
                </integernet_autoshipping>
                <cashondelivery>
                    <name>Nachnahme (Zahlungsart)</name>
                    <description>Ermöglicht das Hinzufügen einer Nachnahmegebühr, abhängig von Inlands- oder Auslandsversand.</description>
                </cashondelivery>
                <bankpayment>
                    <name>Vorkasse (Zahlungsart)</name>
                    <description>Zahlungsart "Vorkasse"</description>
                    <is_default>1</is_default>
                </bankpayment>
                <itabs_invoice>
                    <name>Rechnung (Zahlungsart)</name>
                    <description>Zahlungsart "Rechnung" mit Einschränkung auf bestimmte Kundengruppen</description>
                </itabs_invoice>
                <therouv_debitpayment>
                    <name>Lastschrift (Zahlungsart)</name>
                    <description>Zahlungsart "Rechnung"</description>
                </therouv_debitpayment>
            </modules>
        </magento_localized>
        <germansetup>
            <default_country>de</default_country>
        </germansetup>
    </default>
</config>